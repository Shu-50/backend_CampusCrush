# =========================================
# Node.js backend .gitignore
# =========================================

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# dotenv environment variables
.env
.env.local
.env.production
.env.development

# Sensitive files (keys, credentials)
*.key
*.pem

# Node modules
node_modules/

# Build / dist
dist/
build/

# Coverage directory used by tools like istanbul
coverage/

# Optional npm cache directory
.npm

# Optional eslint cache
.eslintcache

# Optional REPL history
.node_repl_history

# Output of 'npm pack'
*.tgz

# Yarn Integrity file
.yarn-integrity

# Parcel-bundler cache
.cache

# VSCode settings
.vscode/

# MacOS files
.DS_Store
._*

# Windows files
Thumbs.db
